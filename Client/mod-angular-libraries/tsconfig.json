{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": [
            "ES2022",
            "dom"
        ],
        "module": "ES2022",
        "moduleResolution": "node",
        "outDir": "./dist/out-tsc",
        "paths": {
            "mod-framework": [
                "dist/mod-framework"
            ],
            "mod-framework/*": [
                "dist/mod-framework/*"
            ]
        },
        "sourceMap": true,
        "resolveJsonModule": true,
        "target": "ES2022",
        "useDefineForClassFields": false
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
