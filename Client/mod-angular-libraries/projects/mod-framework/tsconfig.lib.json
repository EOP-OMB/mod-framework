{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/lib",
        "declarationMap": true,
        "declaration": true,
        "inlineSources": true,
        "types": [],
        "lib": [
            "dom",
            "es2018"
        ]
    },
    "angularCompilerOptions": {
        "enableIvy": true,
        "skipTemplateCodegen": true,
        "strictMetadataEmit": false,
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true,
        "enableResourceInlining": true
    },
    "exclude": [
        "src/test.ts",
        "**/*.spec.ts"
    ]
}
